#include <stdio.h>

int main() {
    int number;
    
    printf("Введите целое число: ");
    scanf("%d", &number);
    
    // Используем оператор % для определения остатка
    // Если остаток 0, то число четное, иначе нечетное
    printf("Число %d %s\n", number, (number % 2 == 0) ? "четное" : "нечетное");
    
    return 0;
}
